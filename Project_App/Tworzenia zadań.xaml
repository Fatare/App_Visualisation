            </Rectangle.Fill>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="30" Margin="0,86,0,0" VerticalAlignment="Top" Width="160">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="1,1" SpreadMethod="Pad" MappingMode="RelativeToBoundingBox" Opacity="0.8">
