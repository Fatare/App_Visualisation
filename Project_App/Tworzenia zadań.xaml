        <Button Content="Dodaj" HorizontalAlignment="Left" Height="25" Margin="224,366,0,0" VerticalAlignment="Top" Width="59" Click="Button_Click"/>
        <Button Content="Usuń" HorizontalAlignment="Left" Height="25" Margin="295,366,0,0" VerticalAlignment="Top" Width="59"/>
        <Rectangle HorizontalAlignment="Left" Height="302" Margin="509,99,0,0" VerticalAlignment="Top" Width="180" Fill="#FF908BC8"/>
        <TextBlock HorizontalAlignment="Left" Height="16" Margin="520,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" TextAlignment="Center" FontWeight="Bold" Background="#FFCDCAF2"><Run Language="pl-pl" Text="Dodaj zadanie"/></TextBlock>
        <Button Content="Dodaj" HorizontalAlignment="Left" Height="25" Margin="530,366,0,0" VerticalAlignment="Top" Width="59" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Left" Margin="532,138,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="134" Height="202"/>

